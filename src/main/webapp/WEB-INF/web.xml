<?xml version="1.0" encoding="UTF-8" ?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.fluffypets.mvc.servlets.FrontServlet</servlet-class>
    </servlet>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>FileStoringServlet</servlet-name>
        <servlet-class>com.fluffypets.mvc.servlets.FileStoringServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FileStoringServlet</servlet-name>
        <url-pattern>/file/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/root/*</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/TestDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>FileUploadHandler</servlet-name>
        <servlet-class>com.fluffypets.mvc.servlets.FrontServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FileUploadHandler</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout> 300 </session-timeout>
    </session-config>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/views/httpError.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/httpError.jsp</location>
    </error-page>

    <filter>
        <filter-name>CharsetFilter</filter-name>
        <filter-class>com.fluffypets.mvc.filtres.CharsetFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>com.fluffypets.mvc.filtres.AdminFilter</filter-class>
    </filter>

    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.fluffypets.mvc.filtres.UserFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CharsetFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/root/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/root/admin/*</url-pattern>
    </filter-mapping>

</web-app>